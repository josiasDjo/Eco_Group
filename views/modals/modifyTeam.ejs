<div id="ModifyTeamId" class="w-96 h-auto px-10 py-5 bg-white items-center justify-center hidden flex-col shadow-lg z-50 rounded-lg shadow-lg relative">
    <button type="button" class="absolute top-3 left-4 text-2xl txt_color_orange cursor-pointer" onclick="openModifyMember('close');"><i class="fa-solid fa-rectangle-xmark" id="closeConnexion"></i></button>
    <h4 class="text-xl font-medium my-3">Modifier</h4>
    <form id="ModifyToTeam" class="w-full flex flex-col" enctype="multipart/form-data">
        <li class="hidden" id="modifyIdTeam"></li>
        <input type="text" name="nom" id="nom_modify" placeholder="Nom : " required class="w-full rounded-xl border-2 border-solid border-gray-200 px-3 py-2 my-2">
        <input type="text" name="prenom" id="prenom_modify" placeholder="Prénom : " required class="w-full rounded-xl border-2 border-solid border-gray-200 px-3 py-2 my-2">
        <p>Image Séléctionnée : <span class="text-black" id="imageDefaultTeam"></span></p>
        <input type="file" name="image" id="image_perso_modify" class="w-full rounded-xl border-2 border-solid border-gray-200 px-3 py-2 my-2" accept="image/*">
        <ul class="w-full text-center">
            <p id="msg_result_team_modify" class="text-md"></p>
        </ul>
        <div id="loaderModifyTeam" class="loader" style="display: none;"></div>
        <button type="submit" class="btn_bg_color w-full text-white rounded-xl border-2 border-solid border-yellow-500 px-3 py-2">Ajouter</button>
    </form>
</div>