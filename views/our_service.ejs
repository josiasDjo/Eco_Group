    <!-- OUR SERVICES -->

    <div id="our_service" class="w-11/12 my-12 flex flex-col relative">
        <h2 class="color_blue_foncé text-xl font-medium">NOS SERVICES</h2>
        <h3 class="text-black font-bold text-xl lg:text-2xl mt-2">
            Des solutions complètes pour accompagner votre transition écologique
        </h3>
        <p class="text-sm lg:text-lg my-6">
            <span class="txt_color_orange">Nos services</span> se distinguent par une approche holistique et personnalisé, alliant diagnostic environnemental, 
            <span class="txt_color_orange">conseil stratégique</span> et formations pratiques. Cette combinaison permet aux entreprises de réduire efficacement leur 
            <span class="txt_color_orange">empreinte écologique</span>, d'optimiser leurs processus internes et de se conformer aux évolutions réglementaires, tout en stimulant 
            l'innovation et en renforçant leur compétitivité.
        </p>

        <% if(admin) { %>
            <div class="w-full my-3">
                <button type="button" onclick="openAddService('open');" id="add_service" class="color_blue_foncé border_blue_foncé border-2 border-solid relative text-lg mx-3 my-2 lg:my-0 dm_sans py-2 px-3 rounded-lg font-medium cursor-pointer">Ajouter un service</button>
            </div>  
        <% } %>

        <div class="w-full flex flex-col md:flex-row py-10 items-center justify-center">
            <% if (services.length > 0) { %>
                <% services.forEach((ser) => { %>
                    <div class="w-full md:w-56 lg:w-64 min-h-56 shadow-lg my-3 m-2 mb-10">
                        <% if(admin) { %>
                            <ul class="containerSubAction h-12 w-8 backdrop-blur bg-transparent text-center justify-center items-center absolute top-0 right-0">
                                <li id="" class="modifyProject text-black cursor-pointer"><i class="fa-solid fa-pen-to-square"></i></li>
                                <li id="" class="deleteProject text-red-500 cursor-pointer"><i class="fa-solid fa-trash"></i></li>
                                <li id="" class="project_id hidden"><%= ser.service_id %></li>
                                <li id="" class="project_title hidden"><%= ser.title %></li>
                                <li id="" class="project_description hidden"><%= ser.description %></li>
                                <li id="" class="project_image hidden"><%= ser.image %></li>
                            </ul>
                        <% } %>
                        <div class="w-full h-auto lg:h-40 relative items-center justify-center flex">
                            <img src="/images/<%=ser.image%>" loading="lazy" class="h-auto w-full object-contain" alt="Accompagnement personnel">
                        </div>
                        <div class="w-full h-fit color_blue_foncé border-t-2 border-solid border-gray-200 p-2 bg-white">
                            <h4 class="text-center text-md font-medium"><%=ser.title%></h4>
                            <p class="text-black text-sm mt-2">
                                <%= ser.description %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-red-500 text-lg">Aucun projet pour le moment</p>
            <% } %>

            <div class="w-full md:w-56 lg:w-64 h-auto shadow-lg my-3 m-2 ">
                <div class="w-full h-auto lg:h-48 relative items-center justify-center flex">
                    <img src="/images/impacts.jpg" loading="lazy" class="w-full h-auto object-cover" alt="">
                </div>
                <div class="w-full h-fit flex flex-col color_blue_foncé border-t-2 border-solid border-gray-200 p-2">
                    <h4 class="text-center text-md font-medium">Outils et méthodologies d'analyse de l'impact</h4>
                </div>
            </div>
    
            <div class="w-full md:w-56 lg:w-64 h-auto shadow-lg m-2">
                <div class="w-full h-auto lg:h-48 relative items-center justify-center flex">
                    <img src="/images/sensibilisation.jpg" loading="lazy" class="w-auto h-full object-cover" alt="">
                </div>
                <div class="w-full h-fit flex flex-col color_blue_foncé border-t-2 border-solid border-gray-200 p-2">
                    <h4 class="text-center text-md font-medium">Formations et Ateliers de sensibilisation</h4>
                </div>
            </div>
        </div>
    </div>
    